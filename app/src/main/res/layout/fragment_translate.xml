<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/inputTranslateEditText"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginBottom="20sp"
        android:background="@drawable/textview_border_background"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/input_text"
        android:textColorHint="@color/white"
        android:inputType="textMultiLine"
        android:autofillHints="@string/input_text"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20sp"
        android:text="@string/translate_button"
        android:enabled="false"/>

    <TextView
        android:id="@+id/translatedtextView"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="@drawable/textview_border_background"
        android:outlineProvider="paddedBounds"
        android:text="@string/translated_text_is_here"
        android:textColor="@color/white" />

</LinearLayout>